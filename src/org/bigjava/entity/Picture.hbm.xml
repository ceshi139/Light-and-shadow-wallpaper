<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.bigjava.entity">
    <class name="Picture" table="picture">
        <id name="id"> 
            <generator class="identity"></generator>
        </id>
        <property name="url"/>
        <property name="size"/>
        <property name="state"/>
        <property name="time"/>
        <property name="pictureName"/>
        <property name="CollectionNumber"/>
        <property name="format"/>
        <many-to-one name="type" column="type" class="Type" ></many-to-one>
    </class>
</hibernate-mapping>